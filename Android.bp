package {
    // See: http://go/android-license-faq
    default_applicable_licenses: [
        "external_libultrahdr_license",
        "adobe_hdr_gain_map_license",
    ],
}

license {
    name: "external_libultrahdr_license",
    visibility: [":__subpackages__"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
    ],
    license_text: [
        "LICENSE",
    ],
}

cc_library {
    name: "libultrahdr",
    host_supported: true,
    vendor_available: true,
    export_include_dirs: [
        ".",
        "lib/include",
    ],
    local_include_dirs: ["lib/include"],

    srcs: [
        "lib/src/icc.cpp",
        "lib/src/jpegr.cpp",
        "lib/src/gainmapmath.cpp",
        "lib/src/jpegrutils.cpp",
        "lib/src/multipictureformat.cpp",
        "lib/src/ultrahdr_api.cpp",
    ],

    shared_libs: [
        "libimage_io",
        "libjpeg",
        "libjpegencoder",
        "libjpegdecoder",
        "liblog",
    ],
}

cc_library {
    name: "libjpegencoder",
    host_supported: true,
    vendor_available: true,

    shared_libs: [
        "libjpeg",
        "liblog",
    ],

    export_include_dirs: ["lib/include"],

    srcs: [
        "lib/src/jpegencoderhelper.cpp",
    ],
}

cc_library {
    name: "libjpegdecoder",
    host_supported: true,
    vendor_available: true,

    shared_libs: [
        "libjpeg",
        "liblog",
    ],

    export_include_dirs: ["lib/include"],

    srcs: [
        "lib/src/jpegdecoderhelper.cpp",
    ],
}
